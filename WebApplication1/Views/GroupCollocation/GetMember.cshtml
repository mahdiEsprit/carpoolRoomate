

@{
    ViewBag.Title = "GetMember";
}



<div class="col-md-10">
    <h2>Groupe Members</h2>
    <h4>Select members</h4>
    @using (Html.BeginForm("postMember", "GroupCollocation", new { id = ViewBag.Id }, FormMethod.Post))
    {
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    
                    <th>Name</th>
                    
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @if (ViewBag.Members != null)
                {
                    foreach (var emp in (ViewBag.Members as List<Domain.User>))
                    {
                        <tr>
                           
                            <td>@emp.FirstName @emp.Lastname</td>
                            
                            <td>
                                <center><input type="checkbox" name="member" value="@emp.Id"></center>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <input type="submit" class="btn btn-primary" value="Assign members(s)">

    }

</div>


@section scripts
{
    @Scripts.Render("~/bundles/vendors")
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>
}



